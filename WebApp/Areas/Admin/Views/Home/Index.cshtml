@model IEnumerable<WebApp.Models.Post>
<h1>Admin Page</h1>

<table>
    <tr><th>Title</th><th>Description</th><th>Author</th></tr>
    @foreach (var newPost in Model)
    {
        <tr>
            <td>@newPost.Title</td>
            <td>@newPost.Description</td>
            <td>@newPost.Author</td>
            <td><img style="width: 200px; height: 200px;" src="@Url.Content(@newPost.PathToImage)" alt="@newPost.Title"></td>
            <td>
                <form asp-controller="Home" asp-action="AcceptPost" asp-route-id="@newPost.Id" method="post">
                    <input type="submit" value="Одобрить" />
                </form>
            </td>
            <td>
                <form asp-controller="Home" asp-action="CancelPost" asp-route-id="@newPost.Id" method="post">
                    <input type="submit" value="Отклонить" />
                </form>
            </td>
        </tr>
    }
</table>
<a asp-controller="Home" asp-action="UsersControl">Users</a>
<a asp-controller="Home" asp-action="AllPost">All post</a>
<a asp-controller="Home" asp-action="AllUpdatePost">Update posts</a>
<a asp-area="" asp-controller="Home" asp-action="Index">Index</a>
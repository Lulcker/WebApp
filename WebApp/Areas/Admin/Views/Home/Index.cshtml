@model IEnumerable<WebApp.Models.Post>
<h1>Admin Page</h1>

<table>
    <tr><th>Title</th><th>Description</th><th>Author</th><th>Enable</th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Author</td>
            <td>@item.Enabled</td>
            <td>
                <form asp-controller="Home" asp-action="AcceptPost" asp-route-id="@item.Id" method="post">
                    <input type="submit" value="Одобрить" />
                </form>
            </td>
            <td>
                <form asp-controller="Home" asp-action="CancelPost" asp-route-id="@item.Id" method="post">
                    <input type="submit" value="Отклонить" />
                </form>
            </td>
        </tr>
    }
</table>
<a asp-controller="Home" asp-action="UsersControl">Users</a>
<a asp-controller="Home" asp-action="AllPost">All post</a>
<a asp-area="" asp-controller="Home" asp-action="Index">Index</a>
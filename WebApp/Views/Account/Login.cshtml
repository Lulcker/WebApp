@model WebApp.ViewModels.LoginModel
<h1>Login</h1>
<a asp-controller="Home" asp-action="Index" >Index</a>
<a asp-controller="Account" asp-action="Register" >Регистрация</a>

<form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" method="post" >
    <div asp-validation-summary="ModelOnly"></div>
    <p>
        <label asp-for="Login"></label><br />
        <input asp-for="Login" />
        <span asp-validation-for="Login"></span>
    </p>
    <p>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </p>
    <p>
        <label asp-for="RememberMe"></label><br />
        <input type="checkbox" asp-for="RememberMe" />
    </p>
    <p>
        <input type="submit" value="Войти" />
    </p>
</form>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
@model WebApp.ViewModels.RegisterModel
<h1>Register</h1>

<a asp-controller="Home" asp-action="Index">Index</a>
<a asp-controller="Account" asp-action="Login">Войти</a>

<h2>Регистрация нового пользователя</h2>
<form method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <p>
        <label asp-for="Login"></label><br />
        <input asp-for="Login" />
        <span asp-validation-for="Login" />
    </p>
    <p>
        <label asp-for="Email"></label><br />
        <input asp-for="Email" />
        <span asp-validation-for="Email" />
    </p>
    <p>
        <label asp-for="Password"></label><br />
        <input type="password" asp-for="Password" />
        <span asp-validation-for="Password" />
    </p>
    <p>
        <label asp-for="ComfirmPassword"></label><br />
        <input type="password" asp-for="ComfirmPassword" />
        <span asp-validation-for="ComfirmPassword" />
    </p>
    <p>
        <input type="submit" value="Регистрация" />
    </p>
</form>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
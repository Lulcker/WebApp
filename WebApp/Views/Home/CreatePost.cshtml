@model WebApp.ViewModels.CreatePostModel
<h1>Create Post</h1>

<form asp-controller="Home" asp-action="CreatePost" enctype="multipart/form-data" method="post" >
    <p>
        <label asp-for="Title" >Название</label><br />
        <input asp-for="Title" />
        <span asp-validation-for="Title"/>
    </p>
    <p>
        <label asp-for="Description" >Описание</label><br />
        <input asp-for="Description" />
        <span asp-validation-for="Description" />
    </p>
    <p>
        <input asp-for="Author" type="hidden"/>
    </p>
    <p>
        <input type="file" asp-for="Image" />
        <label asp-for="Image">&nbsp;</label>
    </p>
    @if (!string.IsNullOrWhiteSpace(Model.PathToImage))
    {
        <div>
            <img src="@Url.Content(Model.PathToImage)" alt="" />
        </div>
    }
    <p>
        <input type="submit" value="Добавить" />
    </p>
</form>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>